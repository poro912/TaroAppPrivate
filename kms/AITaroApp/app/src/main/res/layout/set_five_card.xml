<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/five_card_Layout"
        android:visibility="gone">

    <ImageView
            android:id="@+id/five_card_pos0"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:background="@drawable/card_result_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

    <ImageView
            android:id="@+id/five_card_pos1"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:background="@drawable/card_result_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintVertical_bias="1"/>

    <ImageView
            android:id="@+id/five_card_pos2"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:background="@drawable/card_result_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0"/>

    <ImageView
            android:id="@+id/five_card_pos3"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:background="@drawable/card_result_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintVertical_bias="1"/>

    <ImageView
            android:id="@+id/five_card_pos4"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:background="@drawable/card_result_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>